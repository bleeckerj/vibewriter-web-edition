{
  "name": "ghostwriter-web-edition",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:full": "concurrently \"npm run watch:css\" \"npm run dev\"",
    "watch:css": "postcss vanilla/tailwind.css -o vanilla/tailwind-build.css --watch",
    "start": "cd server && node index.js",
    "dev": "cd server && nodemon index.js",
    "install-all": "npm install && cd server && npm install",
    "build:css": "postcss vanilla/tailwind.css -o vanilla/tailwind-build.css --env production"
  },
  "workspaces": [
    "server"
  ],
  "dependencies": {
    "@tiptap/core": "^2.1.12",
    "@tiptap/starter-kit": "^2.1.12",
    "express-rate-limit": "^7.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.0",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11"
  }
}
